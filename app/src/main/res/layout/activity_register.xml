<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amangautam.peerconnect.RegisterActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/toolbar"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:background="@drawable/splash">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome,"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="130sp"
            android:textColor="@android:color/holo_green_light"
            android:shadowColor="@android:color/white"
            android:layout_gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to get started!"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/white"
            android:layout_gravity="start"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_marginTop="10sp"
            app:met_floatingLabel="normal"
            android:hint="Username"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabelTextColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:met_underlineColor="@android:color/holo_green_light"
            app:met_primaryColor="@android:color/holo_green_light"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10sp"
            app:met_floatingLabel="normal"
            android:hint="Email"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabelTextColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:met_underlineColor="@android:color/holo_green_light"
            app:met_primaryColor="@android:color/holo_green_light"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_marginTop="10sp"
            app:met_floatingLabel="normal"
            android:hint="Password"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabelTextColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:met_underlineColor="@android:color/holo_green_light"
            app:met_primaryColor="@android:color/holo_green_light"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:id="@+id/btn_register"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_ripple"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:textColor="#fff"/>


    </LinearLayout>



</RelativeLayout>