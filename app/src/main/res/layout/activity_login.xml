<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amangautam.peerconnect.LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_below="@id/toolbar"
        android:background="@drawable/splash"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/main">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back,"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="140sp"
            android:textColor="@android:color/holo_green_light"
            android:shadowColor="@android:color/white"
            android:layout_gravity="start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In to continue!"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/white"
            android:layout_gravity="start"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            app:met_floatingLabel="normal"
            android:hint="Email"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_textColorHint="@android:color/white"
            app:met_underlineColor="@android:color/holo_green_light"
            app:met_primaryColor="@android:color/holo_green_light"
            android:layout_marginTop="20sp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:inputType="textPassword"
            app:met_floatingLabel="normal"
            android:hint="Password"
            android:layout_marginTop="10sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabelTextColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:met_underlineColor="@android:color/holo_green_light"
            app:met_primaryColor="@android:color/holo_green_light"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:id="@+id/btn_login"
            android:layout_marginTop="10dp"
            android:text="SIGN IN"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/button_ripple"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Forgot password?"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:id="@+id/forgot_password"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/holo_green_light"
            android:textColorLink="@android:color/holo_green_light"/>


    </LinearLayout>



</RelativeLayout>